%%%%%%%%%%%%%%%%%%%%%%%%%%%% box style %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\renewcommand{\familydefault}{\sfdefault}

\tikzstyle{mybox} = [draw=rbctop, ultra thick, rectangle, rounded corners=1cm,text=black, inner sep=1.5em, inner ysep=1.5em]

\tikzstyle{fancytitle} =[fill=rbctop, text=white]

\newcommand{\boxtitle}[2]{
 \node[fancytitle, rounded corners, right=2em] at (#1) { \textsc{\Large \bf \strut #2}};
}
\newcommand{\smallbox}[2]{%
\begin{tikzpicture}
   \node[mybox] (label){%
    \begin{minipage}[t]{.92\linewidth}%
      \large #2 \strut
    \end{minipage}
  };
\boxtitle{label.north west}{#1}
\end{tikzpicture}
\vspace*{1.em}
}

